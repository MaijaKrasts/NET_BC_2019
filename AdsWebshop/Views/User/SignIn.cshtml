@model UserModel
@{
    ViewData["Title"] = "SignIn";
}
    <div class="container">
        <h2>SignIn</h2>
        @TempData["message"]
        @Html.ValidationSummary()
        <form action="SignIn" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input asp-for="Email" class="form-control" id="exampleInputEmail1" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox"> Remember me
                </label>
            </div>
            <button type="submit" class="btn btn-default">Sing in</button>
        </form>
    </div>

